html,
body {
  padding: 0;
  margin: 0;
}

html {
  background-color: #270237;
  /* background-image: url(/img/stars.svg), url(/img/asteriod2.svg),
    url(/img/asteriod1.svg), url(/img/bg.svg); */
  background-image: url(9222f4bdc6e538f32abee22fa8a81696), url(dc1e772979ca4cdafe499c80df38e279);
  /* linear-gradient(to bottom, #270237, #1b3454, #2d4a69, #3f607f, #537895); */
  background-repeat: repeat, no-repeat;
  background-size: auto, cover;
  background-position: bottom, bottom;
  min-height: 100%;
}

body {
  position: relative;
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
  font-family: 'Ubuntu Mono', Menlo, Consolas, Monaco, Liberation Mono,
    Lucida Console, monospace;
  font-size: 24px;

  /* background: #212121; */
  color: #dfdfdf
}

body:before {
    content: '';
    position: absolute;
    left: -150px;
    width: 100px;
    height: 200px;
    background-image: url(5cd3dab5c9c3005b027ccfc6dd84ab7e);
    background-repeat: no-repeat;
    background-size: 100px;
  }

body:after {
    content: '';
    position: absolute;
    right: -150px;
    width: 100px;
    height: 200px;
    top: 200px;
    background-image: url(503d0a69960e2ba15d9e0f2bd0abf2e8);
    background-repeat: no-repeat;
    background-size: 100px;
  }

h1 {
  font-size: 36px;
}

h2 {
  font-size: 28px;
  margin-top: 40px;
}

strong {
  color: white;
}

a {
  color: #f47d20;
}

.more {
  font-size: 80%;
}

.is-hazard .hazard {
  color: red;
  font-weight: bold;
  -webkit-animation: hazard 1s infinite;
          animation: hazard 1s infinite;
  padding: 2px 4px;
}

hr,
.no-hazard,
.is-hazard {
  border: 0;
  border-bottom: 4px solid #b077c8;
}

@-webkit-keyframes hazard {
  0% {
    color: red;
    background: inherit;
  }

  50% {
    color: inherit;
    background: red;
  }

  51% {
    color: red;
    background: inherit;
  }
}

@keyframes hazard {
  0% {
    color: red;
    background: inherit;
  }

  50% {
    color: inherit;
    background: red;
  }

  51% {
    color: red;
    background: inherit;
  }
}